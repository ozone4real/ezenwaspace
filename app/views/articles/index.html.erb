<!-- Articles Header Section -->
<div class="bg-gradient-to-br from-purple-50 to-pink-50 py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
        All <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Articles</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        Explore all my thoughts, insights, and stories about technology, life, and everything in between.
      </p>

      <!-- Search and Filter Bar -->
      <div class="max-w-xl mx-auto flex gap-4">
        <div class="flex-1">
          <input type="search" placeholder="Search articles..." class="w-full px-6 py-4 bg-white rounded-2xl shadow-lg border-0 focus:ring-2 focus:ring-purple-500 focus:outline-none text-gray-900 placeholder-gray-500">
        </div>
        <% if admin? %>
        <%= link_to new_article_path, class: "px-6 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span class="hidden sm:inline">New Article</span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Tags Section -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if Tag.exists? %>
  <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-2xl font-bold text-gray-900">Browse by Tags</h2>
      <% if params[:tag].present? %>
      <%= link_to articles_path, class: "text-purple-600 hover:text-purple-700 font-medium text-sm flex items-center gap-1" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
      Clear filter
      <% end %>
      <% end %>
    </div>

    <div class="flex flex-wrap gap-2">
      <% Tag.joins(:articles).group('tags.id').order('COUNT(articles.id) DESC').limit(20).each do |tag| %>
      <% article_count = tag.articles.count %>
      <%= link_to articles_path(tag: tag.name), 
          class: "inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 #{params[:tag] == tag.name ? 'bg-purple-600 text-white shadow-lg' : 'bg-purple-100 text-purple-700 hover:bg-purple-200'}" do %>
      #<%= tag.name %>
      <span class="text-xs <%= params[:tag] == tag.name ? 'text-purple-200' : 'text-purple-500' %>">
        <%= article_count %>
      </span>
      <% end %>
      <% end %>
    </div>

    <% if params[:tag].present? %>
    <div class="mt-4 pt-4 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        Showing articles tagged with
        <span class="font-semibold text-purple-600">#<%= params[:tag] %></span>
      </p>
    </div>
    <% end %>
  </div>
  <% end %>
</div>

<!-- Articles Grid -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12 lg:pb-16">
  <% if @articles.any? %>
  <div class="grid gap-6 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <% @articles.each_with_index do |article, index| %>
    <article class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden transform hover:-translate-y-2">
      <!-- Article Image -->
      <% if article.images.attached? %>
      <div class="relative overflow-hidden">
        <%= image_tag article.images.first, 
                  class: "w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500" %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

        <% if admin? %>
        <!-- Floating Action Menu -->
        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="flex flex-col gap-2">
            <%= link_to edit_article_path(article), class: "w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <% end %>
            <%= link_to article_path(article), method: :delete, data: { confirm: 'Are you sure?', turbo_method: :delete }, class: "w-10 h-10 bg-red-500/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <% else %>
      <div class="h-48 bg-gradient-to-br from-purple-400 via-pink-500 to-red-500 relative">
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>

        <% if admin? %>
        <!-- Floating Action Menu for no-image articles -->
        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="flex flex-col gap-2">
            <%= link_to edit_article_path(article), class: "w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <% end %>
            <%= link_to article_path(article), method: :delete, data: { confirm: 'Are you sure?', turbo_method: :delete }, class: "w-10 h-10 bg-red-500/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>

      <!-- Article Content -->
      <div class="p-4">
        <!-- Publication Status -->
        <% if admin? %>
        <div class="flex flex-wrap items-center gap-3 mb-3">
          <% if article.published? %>
          <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded-full">Published</span>
          <% else %>
          <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs font-semibold rounded-full">Draft</span>
          <% end %>
          <span class="text-xs text-gray-500">
            <%= article.published_at&.strftime("%b %d, %Y") %>
          </span>
          <span class="text-xs text-gray-500 flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= article.reading_time %> min read
          </span>
        </div>
        <% else %>
        <div class="flex justify-between items-center mb-3">
          <span class="text-xs text-gray-500">
            <%= article.published_at&.strftime("%b %d, %Y") %>
          </span>
          <span class="text-xs text-gray-500 flex items-center gap-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= article.reading_time %> min read
          </span>
        </div>
        <% end %>

        <h3 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-purple-600 transition-colors leading-tight">
          <%= link_to article.title, article_path(article) %>
        </h3>

        <!-- Tags -->
        <% if article.tags.any? %>
        <%= render "articles/tag", article: article %>
        <% end %>

        <p class="text-gray-600 mb-4 leading-relaxed text-sm">
          <%= article.excerpt(100) %>
        </p>

        <!-- Read More Link -->
        <div class="flex justify-between items-center">
          <%= link_to article_path(article), class: "group/link inline-flex items-center gap-2 text-purple-600 font-semibold hover:text-purple-700 transition-colors text-sm" do %>
          Read More
          <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
          <% end %>
        </div>
      </div>
    </article>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="mt-16 flex justify-center">
    <%= paginate @articles %>
  </div>
  <% else %>
  <!-- Empty State -->
  <div class="text-center py-20">
    <div class="w-32 h-32 bg-gradient-to-br from-purple-400 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-8">
      <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
      </svg>
    </div>
    <h2 class="text-4xl font-black text-gray-900 mb-4">No Articles Yet</h2>
    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      Ready to share your thoughts with the world? Create your first article and start your blogging journey.
    </p>
    <%= link_to new_article_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
    Create Your First Article
    <% end %>
  </div>
  <% end %>
</div>