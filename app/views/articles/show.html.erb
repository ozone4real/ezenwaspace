<!-- Article Show Page -->
<div class="bg-gradient-to-br from-purple-50 to-pink-50 py-8 lg:py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Back Navigation -->
    <div class="mb-6">
      <%= link_to articles_path, class: "inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-medium transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Articles
      <% end %>
    </div>

    <!-- Article Card -->
    <article class="bg-white rounded-3xl shadow-xl overflow-hidden relative">
      <!-- Floating Admin Actions -->
      <% if admin? %>
      <div class="absolute top-6 right-6 z-10">
        <div class="flex flex-col gap-2">
          <!-- Publish/Unpublish Button -->
          <% if @article.published? %>
          <%= button_to unpublish_article_path(@article), method: :patch, 
                  class: "w-12 h-12 rounded-full flex items-center justify-center transition-colors shadow-lg", 
                  style: "background-color: #f97316; color: white;",
                  title: "Unpublish Article" do %>
          <svg class="w-5 h-5" fill="none" stroke="white" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
          </svg>
          <% end %>
          <% else %>
          <%= button_to publish_article_path(@article), method: :patch, 
                  class: "w-12 h-12 rounded-full flex items-center justify-center transition-colors shadow-lg", 
                  style: "background-color: #10b981; color: white;",
                  title: "Publish Article" do %>
          <svg class="w-5 h-5" fill="none" stroke="white" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <% end %>
          <% end %>

          <!-- Edit Button -->
          <%= link_to edit_article_path(@article), 
                class: "w-12 h-12 rounded-full flex items-center justify-center transition-colors shadow-lg", 
                style: "background-color: #3b82f6; color: white;",
                title: "Edit Article" do %>
          <svg class="w-5 h-5" fill="none" stroke="white" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          <% end %>

          <!-- Delete Button -->
          <%= button_to article_path(@article), method: :delete, 
                data: { confirm: 'Are you sure you want to delete this article?' },
                class: "w-12 h-12 bg-red-500 rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg", 
                title: "Delete Article" do %>
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          <% end %>
        </div>
      </div>
      <% end %>

      <!-- Article Images -->
      <% if @article.images.attached? %>
      <div class="p-6 pb-0">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @article.images.each do |image| %>
          <%= image_tag image, class: "w-full h-64 object-cover rounded-2xl shadow-lg" %>
          <% end %>
        </div>
      </div>
      <% end %>

      <!-- Article Content -->
      <div class="p-6 lg:p-8">
        <!-- Article Header -->
        <header class="mb-8">
          <!-- Publication Status -->
          <div class="flex items-center gap-2 mb-4">
            <% if @article.published? %>
            <span class="px-3 py-1 bg-green-100 text-green-800 text-sm font-semibold rounded-full">Published</span>
            <% else %>
            <span class="px-3 py-1 bg-yellow-100 text-yellow-800 text-sm font-semibold rounded-full">Draft</span>
            <% end %>
            <span class="text-sm text-gray-500">
              <%= @article.published_at&.strftime("%B %d, %Y at %I:%M %p") %>
            </span>
          </div>

          <!-- Article Title -->
          <h1 class="text-4xl lg:text-5xl font-black text-gray-900 mb-6 leading-tight">
            <%= @article.title %>
          </h1>
        </header>

        <!-- Article Body -->
        <div class="prose prose-lg prose-purple max-w-none">
          <%= @article.content %>
        </div>
      </div>
    </article>

    <!-- Additional Actions -->
    <div class="mt-12 lg:mt-16 text-center">
      <%= link_to articles_path, 
          class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
      </svg>
      View More Articles
      <% end %>
    </div>
  </div>
</div>