<!-- Articles Header Section -->
<div class="bg-gradient-to-br from-purple-50 to-pink-50 py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
        All <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Articles</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        Explore all my thoughts, insights, and stories about technology, life, and everything in between.
      </p>

      <!-- Search and Filter Bar -->
      <div class="max-w-xl mx-auto flex gap-4">
        <div class="flex-1">
          <input type="search" placeholder="Search articles..." class="w-full px-6 py-4 bg-white rounded-2xl shadow-lg border-0 focus:ring-2 focus:ring-purple-500 focus:outline-none text-gray-900 placeholder-gray-500">
        </div>
        <% if admin? %>
        <%= link_to new_article_path, class: "px-6 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span class="hidden sm:inline">New Article</span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Articles Grid -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
  <% if @articles.any? %>
  <div class="grid gap-6 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <% @articles.each_with_index do |article, index| %>
    <article class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden transform hover:-translate-y-2">
      <!-- Article Image -->
      <% if article.images.attached? %>
      <div class="relative overflow-hidden">
        <%= image_tag article.images.first, 
                  class: "w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500" %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>

        <% if admin? %>
        <!-- Floating Action Menu -->
        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="flex flex-col gap-2">
            <%= link_to edit_article_path(article), class: "w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <% end %>
            <%= button_to article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "w-10 h-10 bg-red-500/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <% else %>
      <div class="h-48 bg-gradient-to-br from-purple-400 via-pink-500 to-red-500 relative">
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>

        <% if admin? %>
        <!-- Floating Action Menu for no-image articles -->
        <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="flex flex-col gap-2">
            <%= link_to edit_article_path(article), class: "w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            <% end %>
            <%= button_to article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "w-10 h-10 bg-red-500/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-red-600 transition-colors shadow-lg" do %>
            <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>