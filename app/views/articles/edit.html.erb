<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-6">
    <%= link_to '← Back to Article', article_path(@article), 
        class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Article</h1>

    <%= form_with model: @article, local: true, multipart: true, 
        class: "space-y-6" do |form| %>

    <% if @article.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul class="text-red-700 list-disc list-inside">
        <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :content, "Article Content", 
            class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :content %>
    </div>

    <div class="bg-gray-50 p-4 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Article Images</h3>

      <% if @article.images.attached? %>
      <div class="mb-6">
        <label class="block text-sm font-medium text-gray-700 mb-3">
          Current Images (<%= @article.images.count %>
          <%= @article.images.count == 1 ? 'image' : 'images' %>)
        </label>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <% @article.images.each_with_index do |image, index| %>
          <div class="relative bg-white border border-gray-200 rounded-lg p-2">
            <%= image_tag image, class: "w-full h-24 object-cover rounded" %>
            <div class="mt-2 text-xs text-gray-600 text-center">
              Image <%= index + 1 %> • <%= number_to_human_size(image.byte_size) %>
            </div>
            <%= link_to "×", remove_image_article_path(@article, image_id: image.id), 
                      method: :delete,
                      data: { 
                        confirm: "Remove this image?",
                        turbo_method: :delete 
                      },
                      class: "absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600 shadow-lg",
                      title: "Remove this image" %>
          </div>
          <% end %>
        </div>
      </div>
      <% else %>
      <div class="mb-6 text-center py-8 border-2 border-dashed border-gray-300 rounded-lg">
        <div class="text-gray-500">
          <svg class="mx-auto h-12 w-12 text-gray-400 mb-2" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <p class="text-sm">No images currently attached to this article</p>
        </div>
      </div>
      <% end %>

      <div>
        <%= form.label :images, 
              @article.images.attached? ? "Add More Images" : "Upload Images", 
              class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :images, multiple: true, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              accept: "image/*",
              id: "image-upload" %>

        <p class="text-sm text-gray-500 mt-2">
          Select multiple images at once (JPG, PNG, GIF).
          <% if @article.images.attached? %>
          New images will be added to existing ones.
          <% end %>
        </p>
      </div>
    </div>

    <div class="flex items-center space-x-4">
      <div class="flex items-center">
        <%= form.check_box :published, 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :published, "Published", 
              class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to 'Cancel', article_path(@article), 
            class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      <%= form.submit "Update Article", 
            class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <% end %>
  </div>
</div>