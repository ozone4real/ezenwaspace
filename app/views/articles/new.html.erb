<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="mb-6">
    <%= link_to '← Back to Articles', articles_path, 
        class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">New Article</h1>

    <%= form_with model: @article, local: true, multipart: true, 
        class: "space-y-6" do |form| %>

    <% if @article.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:
      </h2>
      <ul class="text-red-700 list-disc list-inside">
        <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :title, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :content, "Article Content", 
            class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.rich_text_area :content, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div>
      <%= form.label :images, "Images", 
            class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.file_field :images, multiple: true, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            accept: "image/*" %>
      <p class="text-sm text-gray-500 mt-1">You can select multiple images</p>
    </div>

    <div class="flex items-center space-x-4">
      <div class="flex items-center">
        <%= form.check_box :published, 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :published, "Publish immediately", 
              class: "ml-2 text-sm text-gray-700" %>
      </div>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to 'Cancel', articles_path, 
            class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50" %>
      <%= form.submit "Create Article", 
            class: "px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
    <% end %>
  </div>
</div>