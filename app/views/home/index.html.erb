<!-- Hero Section with Modern Gradient -->
<div class="relative min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 overflow-hidden">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-10 left-10 w-48 h-48 lg:w-72 lg:h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse"></div>
    <div class="absolute top-40 right-10 w-48 h-48 lg:w-72 lg:h-72 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 left-20 w-48 h-48 lg:w-72 lg:h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-pulse" style="animation-delay: 4s;"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    <!-- Hero Content -->
    <div class="text-center">
      <div class="mb-6 lg:mb-8">
        <span class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm text-white text-sm font-medium rounded-full border border-white/20">
          ✨ Welcome to my digital space
        </span>
      </div>

      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-black text-white mb-6 lg:mb-8 leading-tight">
        Ezenwa's <span class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-yellow-400">Space</span>
      </h1>

      <p class="text-lg sm:text-xl lg:text-2xl text-gray-300 mb-8 lg:mb-12 max-w-4xl mx-auto leading-relaxed px-4">
        Sharing thoughts, insights, and stories about technology, creativity, and life.
        <span class="text-pink-400 font-semibold">Join the journey.</span>
      </p>

      <div class="flex flex-col sm:flex-row gap-6 justify-center items-center max-w-4xl mx-auto">
        <%= link_to articles_path, class: "w-full sm:w-auto group relative px-8 lg:px-10 py-5 lg:py-6 bg-white text-gray-900 font-bold rounded-3xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300 text-center min-w-[200px]" do %>
        <span class="relative z-10 flex items-center justify-center gap-4 text-lg">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          <span class="tracking-wide">Explore Articles</span>
        </span>
        <div class="absolute inset-0 bg-gradient-to-r from-pink-400 to-yellow-400 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <% end %>

        <%= link_to about_path, class: "w-full sm:w-auto group px-8 lg:px-10 py-5 lg:py-6 bg-white/10 backdrop-blur-sm text-white font-bold rounded-3xl border border-white/20 hover:bg-white/20 transition-all duration-300 text-center min-w-[200px]" do %>
        <span class="flex items-center justify-center gap-4 text-lg">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <span class="tracking-wide">About Me</span>
        </span>
        <% end %>

        <% if admin? %>
        <%= link_to new_article_path, class: "w-full sm:w-auto group px-8 lg:px-10 py-5 lg:py-6 bg-white/10 backdrop-blur-sm text-white font-bold rounded-3xl border border-white/20 hover:bg-white/20 transition-all duration-300 text-center min-w-[200px]" do %>
        <span class="flex items-center justify-center gap-4 text-lg">
          <svg class="w-8 h-8 stroke-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <span class="tracking-wide">Write Something</span>
        </span>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Wave Separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-12 lg:h-16 fill-gray-50">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"></path>
    </svg>
  </div>
</div>

<!-- Stats Section -->
<div class="bg-gray-50 py-12 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 max-w-5xl mx-auto">
      <div class="bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>
        <div class="text-4xl font-black text-gray-900 mb-2"><%= @total_articles %></div>
        <div class="text-gray-600 font-medium">Published Articles</div>
      </div>

      <div class="bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="text-4xl font-black text-gray-900 mb-2">100%</div>
        <div class="text-gray-600 font-medium">Original Content</div>
      </div>

      <div class="bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 text-center">
        <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="text-4xl font-black text-gray-900 mb-2">∞</div>
        <div class="text-gray-600 font-medium">Endless Learning</div>
      </div>
    </div>
  </div>
</div>

<!-- Popular Tags Section -->
<div class="bg-gradient-to-br from-gray-50 to-purple-50 py-12 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if Tag.exists? %>
    <div class="text-center mb-8 lg:mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-4">
        Explore <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Topics</span>
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto px-4">
        Discover articles by the topics that interest you most
      </p>
    </div>

    <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12">
      <div class="flex flex-wrap gap-3 justify-center">
        <% Tag.select('tags.*, COUNT(articles.id) as article_count').joins(:articles).where(articles: { published: true }).group('tags.id').order('COUNT(articles.id) DESC').limit(15).each do |tag| %>
        <%= link_to articles_path(tag: tag.name), 
            class: "group inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-100 to-pink-100 text-purple-700 rounded-full text-sm font-semibold hover:from-purple-200 hover:to-pink-200 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        <%= tag.name %>
        <span class="text-xs bg-purple-200 text-purple-600 px-2 py-1 rounded-full">
          <%= tag.article_count %>
        </span>
        <% end %>
        <% end %>
      </div>

      <div class="text-center mt-8">
        <%= link_to articles_path, 
            class: "inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold rounded-full hover:from-purple-700 hover:to-pink-700 transition-all duration-300 transform hover:-translate-y-1 hover:shadow-lg" do %>
        View All Articles
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<!-- Recent Articles Section -->
<div class="bg-white py-12 lg:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <% if @recent_articles.any? %>
    <div class="text-center mb-12 lg:mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-4">
        Latest <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Stories</span>
      </h2>
      <p class="text-lg lg:text-xl text-gray-600 max-w-3xl mx-auto px-4">
        Fresh insights and thoughts from my journey in tech and beyond
      </p>
    </div>

    <div class="grid gap-6 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3 mb-12">
      <% @recent_articles.each_with_index do |article, index| %>
      <article class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden transform hover:-translate-y-2">
        <% if article.images.attached? %>
        <div class="relative overflow-hidden">
          <%= image_tag article.images.first, 
                    class: "w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500" %>
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <% else %>
        <div class="h-56 bg-gradient-to-br from-purple-400 via-pink-500 to-red-500 relative">
          <div class="absolute inset-0 bg-black/20"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
        </div>
        <% end %>

        <div class="p-4 md:p-6">
          <h3 class="text-2xl font-bold mb-4 text-gray-900 group-hover:text-purple-600 transition-colors">
            <%= link_to article.title, article_path(article) %>
          </h3>

          <p class="text-gray-600 mb-6 leading-relaxed">
            <%= article.excerpt(120) %>
          </p>

          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500 font-medium">
              <%= article.published_at&.strftime("%B %d, %Y") %>
            </span>

            <%= link_to article_path(article), class: "group/link inline-flex items-center gap-2 text-purple-600 font-semibold hover:text-purple-700 transition-colors" do %>
            Read More
            <svg class="w-4 h-4 group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <% end %>
          </div>
        </div>
      </article>
      <% end %>
    </div>

    <div class="text-center">
      <%= link_to articles_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-purple-600 to-pink-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
      View All Articles
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
      <% end %>
    </div>
    <% else %>
    <div class="text-center py-20">
      <div class="w-24 h-24 bg-gradient-to-br from-purple-400 to-pink-500 rounded-3xl flex items-center justify-center mx-auto mb-8">
        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </div>
      <h2 class="text-4xl font-black text-gray-900 mb-4">Ready to Start?</h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Your blogging journey begins here. Share your thoughts and connect with readers.
      </p>
      <%= link_to new_article_path, class: "inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-bold rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300" do %>
      Create Your First Article
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      <% end %>
    </div>
    <% end %>
  </div>
</div>